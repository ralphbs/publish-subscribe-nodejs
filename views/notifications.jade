extends layout

block body
  .container
    .header
      ul.nav.nav-pills.pull-right
          li
            a(href='/logout') Logout
      ul.nav.nav-pills.pull-left
          li
            a(href='/createpost') New 
      ul.nav.nav-pills.pull-center
          li
            a(href='/follow') Follow
      ul.nav.nav-pills.pull-left
          li
            a(href='/') Home     
  br
  .notifications 
        .jumbotron
          h1 Notifications
          br
          br
          div
          ul#posts(data-role="listview")
            - each post in posts
              li(id=post._id, class="list-group-item list-group-item-success")
                a(href="/edit/#{post._id}") 
                  p #{post.category} &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp #{post.post.date} &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp #{post.post.title}          
          br
          br